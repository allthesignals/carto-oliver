<div class="row">
  <div class="col s9" style="padding: 0;">
    <div id="map"></div>
  </div>
  <div class="col s3" style="padding: 0;">
    <h4 class="center-align">Select Layers</h4>
    <ul class="collapsible" data-collapsible="expandable" style="padding: 0; box-shadow: none;">
      <%- @categories.each do |category| %>
        <li class="collection-item">
          <div class="collapsible-header"><%= category[:name] %></div>
          <div class="collapsible-body">
            <%= render  partial: 'tables', 
                        locals: { tables: category[:tables], depth: category[:depth] } if category[:tables] || "No Results"  %>

            <%- if category[:subcategories] %>
              <%= render  partial: 'category', 
                          locals: { subcategories: category[:subcategories] } %>
            <%- end %>
          </div>
        </li>
      <%- end %>
    </ul>
  </div>
</div>